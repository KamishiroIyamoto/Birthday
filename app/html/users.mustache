<div class="container">
    <h1>Коллеги</h1>
    <form method="post" action="/users/add">
        <div class="mb-3">
            <label for="name" class="form-label">Имя в родительном падеже</label>
            <input class="form-control" name="name" id="name" placeholder="Иванова Ивана" required>
        </div>

        <div class="mb-3">
            <label for="username" class="form-label">Ник в телеграме (то, что после @).</label>
            <input class="form-control" name="username" id="username" placeholder="cyberlenin1917" required>
        </div>

        <div class="mb-3">
            <label for="birthday" class="form-label">День рождения</label>
            <input class="form-control" name="birthday" id="birthday" type="date" required>
        </div>

        <button class="btn btn-primary" type="submit">Сохранить</button>
    </form>
    <br><br>

    {{#users}}
        <div class="row">
            <div class="col">{{name}}</div>
            <div class="col">{{username}}</div>
            <div class="col">{{birthday}}</div>
            <div class="col">
                <form method="post" action="/users/delete" style="display: inline-block">
                    <input type="hidden" name="id" value="{{id}}">
                    <button type="submit" style="width: 50px">
